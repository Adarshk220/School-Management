<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="event_email_template" model="mail.template">
        <field name="name">Event Email Template</field>
        <field name="model_id" ref="base.model_res_partner"/>
        <field name="subject">Reminder Email</field>
        <field name="email_from">{{ object.company_id.email }}</field>
        <field name="email_to">{{ object.email}}</field>
        <field name="description">Two days remaining for the event</field>
        <field name="body_html" type="html">
<div>
    <p>
        Dear<t t-out="object.name"/>,
        <br/>
        <br/>
        Two days remaining for starting the event
        <br/>
    </p>
    Regards,
    <br/>
    <t t-out="object.company_id.name"/>
</div>
        </field>
    </record>
</odoo>