<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_leave">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="page">
                    <div class="oe_structure"/>
                    <h2 align="center">Leave Report</h2><br/><br/>
                    <table class="table">
                        <tr>
                            <th>Sequence</th>
                            <th>Name</th>
                            <th>Leave reason</th>
                            <th>Starting date</th>
                            <th>Ending date</th>
                        </tr>
                        <tr t-foreach="data['report']" t-as="row" align="center">
                            <td>
                                <span t-esc="row['sequence']"/>
                            </td>
                            <td>
                                <span t-esc="row['name']"/>
                            </td>
                            <td>
                                <span t-esc="row['reason']"/>
                            </td>
                            <td>
                                <span t-esc="row['start_date']"/>
                            </td>
                            <td>
                                <span t-esc="row['end_date']"/>
                            </td>
                        </tr>
                    </table>
                </div>
            </t>
        </t>
    </template>
</odoo>
