<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="online_leave_registration_form">
        <t t-call="website.layout">
            <div id="leave">
                <div class="container">
                    <form id="request_form" method="post" action="/leave_registration">
                        <br/>
                        <br/>
                        <div class="s_website_form_rows row s_col_no_bgcolor">
                            <div class="form-group col-12 s_website_form_field s_website_form_required">
                                <div class="row s_col_no_resize s_col_no_bgcolor">
                                    <label class="col-form-label col-sm-auto s_website_form_label"
                                           style="width: 200px">
                                        <span class="s_website_form_label_content">Student</span>
                                        <span class="s_website_form_mark">*</span>
                                    </label>
                                    <div class="col-sm">
                                        <select name="student_id" t-attf-class="form-control s_website_form_input"
                                                required="1">
                                            <t t-foreach="students" t-as="student">
                                                <option t-att-value="student.id">
                                                    <t t-esc="student.name"/>
                                                </option>
                                            </t>
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <br/>
                            <br/>
                            <br/>
                            <div class="form-group col-12 s_website_form_field s_website_form_required"
                                 data-type="text" data-name="Field">
                                <div class="row s_col_no_resize s_col_no_bgcolor">
                                    <label class="col-form-label col-sm-auto s_website_form_label"
                                           style="width: 200px">
                                        <span class="s_website_form_label_content">Start Date</span>
                                        <span class="s_website_form_mark">*</span>
                                    </label>
                                    <div class="col-sm">
                                        <input type="date" id="start_date" name="start_date"
                                               class="form-control s_website_form_input" required=""/>
                                    </div>
                                </div>
                            </div>
                            <br/>
                            <br/>
                            <br/>
                            <div class="form-group col-12 s_website_form_field s_website_form_required"
                                 data-type="text" data-name="Field">
                                <div class="row s_col_no_resize s_col_no_bgcolor">
                                    <label class="col-form-label col-sm-auto s_website_form_label"
                                           style="width: 200px">
                                        <span class="s_website_form_label_content">End Date</span>
                                        <span class="s_website_form_mark">*</span>
                                    </label>
                                    <div class="col-sm">
                                        <input type="date" id="end_date" name="end_date"
                                               class="form-control s_website_form_input" required=""/>
                                    </div>
                                </div>
                            </div>
                            <br/>
                            <br/>
                            <br/>
                            <div class="form-group col-12 s_website_form_field" data-type="char"
                                 data-name="Field">
                                <div class="row s_col_no_resize s_col_no_bgcolor">
                                    <label class="col-form-label col-sm-auto s_website_form_label"
                                           style="width: 200px">
                                        <span class="s_website_form_label_content">Reason</span>
                                        <span class="s_website_form_mark">*</span>
                                    </label>
                                    <div class="col-sm">
                                        <input type="text"
                                               class="form-control s_website_form_input" id="reason" name="reason" required=""/>
                                    </div>
                                </div>
                            </div>
                            <br/>
                            <br/>
                            <br/>
                            <div class="form-group col-12 s_website_form_submit" data-name="Submit Button">
                                <div style="width: 200px;" class="s_website_form_label"/>
                                <input type="submit" class="btn btn-primary" value="submit" id="submit"/>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </t>
    </template>
</odoo>