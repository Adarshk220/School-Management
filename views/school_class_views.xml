<?xml version="1.0"?>
<odoo>

    <record id="student_class_view_form" model="ir.ui.view">
        <field name="name">school.class.form</field>
        <field name="model">school.class</field>
        <field name="arch" type="xml">
            <form string="class">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                        </group>
                        <group>
                            <field name="department_id"/>
                        </group>
                        <group>
                            <field name="hod_id"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Students Info">
                            <field name="student_ids"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="student_class_view_tree" model="ir.ui.view">
        <field name="name">school.class.tree</field>
        <field name="model">school.class</field>
        <field name="arch" type="xml">
            <tree string="manage class" create="1">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="school_class_action" model="ir.actions.act_window">
        <field name="name">Manage Class</field>
        <field name="res_model">school.class</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_school_root" name="School Management">
        <menuitem id="menu_configuration_master" name="Configuration" sequence="10">
            <menuitem id="menu_configuration_class" action="school_class_action"/>
        </menuitem>
    </menuitem>
</odoo>