<?xml version="1.0"?>
<odoo>

    <record id="student_staff_view_form" model="ir.ui.view">
        <field name="name">res.partner.form</field>
        <field name="model">res.partner</field>
        <field name="arch" type="xml">
            <form string="staff">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="student_teacher_view_form" model="ir.ui.view">
        <field name="name">res.partner.form</field>
        <field name="model">res.partner</field>
        <field name="arch" type="xml">
            <form string="teacher">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="school_staff_action" model="ir.actions.act_window">
        <field name="name">Manage Staff</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('partner_type', '=', 'staff')]</field>
    </record>

    <record id="school_teacher_action" model="ir.actions.act_window">
        <field name="name">Manage Teacher</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('partner_type', '=', 'teacher')]</field>
    </record>

    <menuitem id="menu_school_root" name="School Management">
        <menuitem id="menu_employee_master" name="Employee" sequence="9" groups="school_management.school_staff">
            <menuitem id="menu_employee_staff" action="school_staff_action"/>
            <menuitem id="menu_employee_teacher" action="school_teacher_action"/>
        </menuitem>
    </menuitem>
</odoo>