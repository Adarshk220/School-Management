<?xml version="1.0"?>
<odoo>
    <record id="school_student_class_view_form" model="ir.ui.view">
        <field name="name">school.class.form</field>
        <field name="model">school.class</field>
        <field name="arch" type="xml">
            <form string="class" create="False">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                        </group>
                        <group>
                            <field name="department_id"/>
                        </group>
                        <group>
                            <field name="hod_id"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Students Info">
                            <field name="student_ids"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="school_student_class_view_tree" model="ir.ui.view">
        <field name="name">school.class.tree</field>
        <field name="model">school.class</field>
        <field name="arch" type="xml">
            <tree string="class" create="0">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="school_student_class_action" model="ir.actions.act_window">
        <field name="name">Class</field>
        <field name="res_model">school.class</field>
        <field name="view_mode">tree,form</field>
        <field name="view_ids" eval="[Command.clear(),
                Command.create({'view_mode': 'tree', 'view_id': ref('school_student_class_view_tree')}),
                Command.create({'view_mode': 'form', 'view_id': ref('school_student_class_view_form')})]"/>
    </record>

    <menuitem id="menu_school_root" name="School Management">
        <menuitem id="menu_class_master" name="Classes" sequence="8" action="school_student_class_action"/>
    </menuitem>
</odoo>